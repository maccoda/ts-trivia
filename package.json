{
  "name": "typescript-react",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@types/react": "^16.3.13",
    "@types/react-dom": "^16.0.5",
    "axios": "^0.18.0",
    "mobx": "^3.2.2",
    "mobx-react": "^4.2.2",
    "react": "^15.6.2",
    "react-app-rewire-mobx": "^1.0.6",
    "react-app-rewire-typescript": "^2.0.2",
    "react-app-rewired": "^1.5.2",
    "react-dom": "^15.6.2",
    "react-scripts": "1.1.4"
  },
  "scripts": {
    "start": "react-app-rewired start",
    "build": "react-app-rewired build",
    "test": "react-app-rewired test --env=jsdom",
    "coverage": "yarn test --coverage --collectCoverageFrom=src/*/**/*.ts*",
    "eject": "react-app-rewired eject",
    "check": "tslint -c tslint.json --fix --project tsconfig.json"
  },
  "devDependencies": {
    "@types/enzyme": "^3.1.10",
    "@types/jest": "^22.2.3",
    "awesome-typescript-loader": "^5.0.0",
    "axios-mock-adapter": "^1.15.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-15": "^1.0.5",
    "jest": "^20.0.4",
    "react-test-renderer": "^15.5.0",
    "source-map-loader": "^0.2.3",
    "ts-jest": "^20.0.14",
    "tslint": "^5.12.0",
    "tslint-react": "^3.6.0",
    "typescript": "^2.8.3"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/__tests__/**/*.ts?(x)",
      "**/?(*.)(spec|test).ts?(x)"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "mapCoverage": true
  }
}
